<main class="show">
  <div>
    <h1>{{show.name}}</h1>
    <img alt="{{show.name}}" src="{{show.image.medium}}" />
    <dl>
      <dt>Language</dt>
      <dd>{{show.language}}</dd>
      <dt>Genres</dt>
      {{#each show.genres}}
      <dd>
        <ul>
          <li>{{this}}</li>
        </ul>
      </dd>
      {{/each}}
      <dt>Average Rating</dt>
      <dd>{{show.rating.average}}</dd>
      <dt>Network</dt>
      <dd>{{show.network.name}}</dd>
      <dt>Summary</dt>
      <dd>{{show.summary}}</dd>
    </dl>
  </div>
</main>